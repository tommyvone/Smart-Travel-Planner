entrypoint = "main.py"
modules = ["python-3.11"]

[nix]
channel = "stable-25_05"

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
run = ["sh", "-c", "gunicorn --bind 0.0.0.0:5000 --workers 2 main:app"]
deploymentTarget = "cloudrun"

[workflows]
runButton = "Run Travel App"

[[workflows.workflow]]
name = "Run Travel App"
author = 45390936
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --bind 0.0.0.0:5000 --workers 2 main:app"

[[ports]]
localPort = 5000
externalPort = 80
